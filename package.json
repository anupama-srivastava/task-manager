{
  "name": "taskflow",
  "version": "1.0.0",
  "description": "Professional Task Management Application - Full Stack",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
